<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detail3">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp">

            <ImageView
                android:layout_width="400dp"
                android:layout_height="373dp"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:src="@drawable/air3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <TextView
                android:layout_width="275dp"
                android:layout_height="60dp"
                android:text="AQUA Carton 600ml x 24pcs"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="115dp"
                android:layout_height="38dp"
                android:text="Rp55,500"

                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="AQUA Airnya begitu murni dan alami, berasal dari mata air pilihan."
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Detail
- Bentuk Produk: Botol
"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:padding="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="
-  Jumlah dalam kemasan: 24 buah"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="
-Isi: 600 ml "
                android:textSize="20dp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/konfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Lanjut Pembayaran"
            android:textColor="#09460A"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>